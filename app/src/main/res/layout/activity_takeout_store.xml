<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="store"
            type="com.fenglangjuxu.takeout.model.store.TakeOutStoreMp"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/takeout_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/commonBg"
            app:elevation="0dp">
            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/static_takeout_store_top"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="68dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_item_radius">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="4dp"
                            android:src="@mipmap/static_takeout_store_photo"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="4dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">
                                <TextView
                                    style="@style/text16"
                                    android:text="南京鸭血粉丝汤(吴中店)"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    style="@style/text10"
                                    android:textColor="@color/textGray"
                                    android:gravity="bottom"
                                    android:layout_marginEnd="10dp"
                                    android:text="月售38件"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@mipmap/bg_takeout_store_coupon"
                                android:gravity="center_vertical"
                                android:layout_marginTop="6dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="4dp"
                                    android:text="6元优惠券"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="4dp"
                                    android:text="领取"/>
                            </LinearLayout>
                            <TextView
                                style="@style/text10"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/textGray"
                                android:drawableStart="@mipmap/ic_takeout_store_notice"
                                android:drawablePadding="2dp"
                                android:text="公告:这些年厂家直销可你啊沙发现场播放分为发改"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="12dp"
                                android:orientation="horizontal">
                                <TextView
                                    style="@style/text10"
                                    android:textColor="@color/hotRed"
                                    android:background="@drawable/bg_red_radius_stroke"
                                    android:layout_marginEnd="8dp"
                                    android:padding="2dp"
                                    android:text="满5减5"/>
                                <TextView
                                    style="@style/text10"
                                    android:textColor="@color/hotRed"
                                    android:background="@drawable/bg_red_radius_stroke"
                                    android:layout_marginEnd="8dp"
                                    android:padding="2dp"
                                    android:text="满5减5"/>
                                <TextView
                                    style="@style/text10"
                                    android:textColor="@color/hotRed"
                                    android:background="@drawable/bg_red_radius_stroke"
                                    android:layout_marginEnd="8dp"
                                    android:padding="2dp"
                                    android:text="满5减5"/>
                                <TextView
                                    style="@style/text10"
                                    android:textColor="@color/hotRed"
                                    android:background="@drawable/bg_red_radius_stroke"
                                    android:layout_marginEnd="8dp"
                                    android:padding="2dp"
                                    android:text="满5减5"/>
                                <TextView
                                    style="@style/text10"
                                    android:textColor="@color/hotRed"
                                    android:background="@drawable/bg_red_radius_stroke"
                                    android:layout_marginEnd="8dp"
                                    android:padding="2dp"
                                    android:text="满5减5"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="48dp"
                    app:titleMarginTop="15dp"
                    app:layout_collapseMode="pin">
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        onClickCommand="@{store.back}">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_back_white"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="36dp"/>
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center_vertical">
                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>
            </LinearLayout>

            <com.fenglangjuxu.view.ScrollViewpager
                android:id="@+id/takeout_store_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_behavior="com.fenglangjuxu.common.TranslucentBehavior"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                onClickCommand="@{store.back}">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_back"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="36dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="26dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_radius">
                <TextView
                    style="@style/text12"
                    android:drawableStart="@mipmap/ic_main_search"
                    android:drawablePadding="4dp"
                    android:textColor="@color/grayC0"
                    android:text="查找您想要的"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>