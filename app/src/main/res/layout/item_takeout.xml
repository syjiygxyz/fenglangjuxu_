<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.fenglangjuxu.takeout.model.home.TakeOutItemMp" />
    </data>

    <LinearLayout
        onClickCommand="@{item.itemCLick}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/d99c567849113" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                style="@style/text14"
                android:ellipsize="end"
                android:lines="1"
                android:text="大米脆皮鸡米饭(吴中店)"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text12"
                        android:drawableStart="@mipmap/ic_benefit"
                        android:drawablePadding="2dp"
                        android:text="特价 ￥6"
                        android:textColor="@color/hotRed" />

                    <TextView
                        style="@style/text10"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="6dp"
                        android:text="好评率100%"
                        android:textColor="@color/textGray" />

                </LinearLayout>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/bg_theme_radius_big"
                    android:text="立即抢购"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>